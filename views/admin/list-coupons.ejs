<%- include("../partials/adminHeader") %>

   <main class="main-wrap">
      <header class="main-header navbar">
         <div class="col-nav">
            <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                  class="material-icons md-apps"></i> </button>
         </div>
      </header>
      <section class="content-main">
         <div class="content-header">
            <h2 class="content-title">Coupons List</h2>
            <div>
               <a href="/admin/add-coupon" class="btn btn-primary"><i class="material-icons md-plus"></i> Add
                  Coupons</a>
            </div>
         </div>
         <div class="card mb-4">
            <header class="card-header">
               <div class="row gx-3">
                  <div class="col-lg-4 col-md-6 me-auto">
                  </div>
                  <div class="col-lg-2 col-md-3 col-6">
                     
                  </div>
               </div>
            </header> <!-- card-header end// -->
            <div class="card-body">
               <div class="table-responsive">
                  <table class="table table-hover">
                     <thead>
                        <tr>
                           <th>Code</th>
                           <th>Status</th>
                           <th>Created</th>
                           <th>Expiration</th>
                           <th>Discount</th>
                           <th class="text-center"> Action </th>
                        </tr>
                     </thead>
                     <tbody class="">
                        <% if (coupons.length) { %>
                           <% for( let i=0; i < coupons.length; i++ ) { %>
                              <tr>
                                 <td style="width: 30%;">
                                    <h6 class="mb-0 title"><%- coupons[i].couponCode %></h6>
                                    </a>
                                 </td>
                                 <% if (coupons[i].isActive===true) { %>
                                    <td><span class="badge rounded-pill alert-success">Active</span></td>

                                    <% }else{ %>
                                       <td><span class="badge rounded-pill alert-danger">Inactive</span></td>

                                       <% } %>
                                          <td><%- (new
                                                Date(coupons[i].createdOn)).toLocaleDateString('en-GB').split('/').join('.')
                                                %>
                                          </td>
                                          <td><%- (new
                                                Date(coupons[i].validFor)).toLocaleDateString('en-GB').split('/').join('.')
                                                %>
                                          </td>
                                          <td><%- coupons[i].discountPercentage %> &#37;</td>

                                          <td class="text-center">

                                             <a href="" data-couponId="<%- coupons[i]._id %>"
                                                class="btn btn-sm btn-brand rounded font-sm mt-15 changeStatus-btn">Change
                                                Status</a>

                                          </td>
                              </tr>
                              <% } %>
                                 <% } %>
                     </tbody>
                  </table> <!-- table-responsive.// -->
               </div>
            </div> <!-- card-body end// -->
         </div> <!-- card end// -->
      </section> <!-- content-main end// -->
      <footer class="main-footer font-xs">
         <div class="row pb-30 pt-15">
            <div class="col-sm-6">
               <script data-cfasync="false"
                  src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
               <script>
                  document.write(new Date().getFullYear())
               </script> Â©, Techspot .
            </div>
            <div class="col-sm-6">
               <div class="text-sm-end">
                  All rights reserved
               </div>
            </div>
         </div>
      </footer>
   </main>

   <!-- Activate and Inactivate the Coupon  -->
   <script>
      const changeStatus = document.querySelectorAll('.changeStatus-btn');
      changeStatus.forEach((btn) => {
         btn.addEventListener('click', async (event) => {
            event.preventDefault();
            const couponId = btn.getAttribute('data-couponId')

            if (couponId) {
               const response = await fetch(`/admin/change-coupon-status/?couponId=${couponId}`);
               const result = await response.json();

               if (result.status === 'success') {
                  Swal.fire({
                     title: result.message,
                     icon: 'success',
                     timer: 1000,
                  })
                  setTimeout(() => {
                     location.href = location.href;
                  }, 1500);
               }
            }

         })
      })
   </script>
   <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
   <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
   <script src="/assets/js/vendors/select2.min.js"></script>
   <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
   <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
   <!-- Main Script -->
   <script src="/assets/js/main.js" type="text/javascript"></script>
</body>


