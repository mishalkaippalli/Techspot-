<%- include("../partials/adminHeader") %>

<div class = "content-header row">
    <div class = "justify-content-between align-items-center">
        <h2 class="content-title card-title">Customers</h2>
    </div>
</div>

<!--  user search code here -->

<div class="right mt-5 ml-10">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"><b>Name</b></th>
                <th scope="col"><b>Email</b></th>
                <th scope="col"><b>Phone</b></th>
                <th scope="col"><b>Status</b></th>
                <th scope="col"><b>Action</b></th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < data.length; i++) { %>
                <tr>
                    <td><%= data[i].firstName %></td>
                    <td><%= data[i].email %></td>
                    <td><%= data[i].mobile %></td>
                    <td class="text-start">
                        <% if (data[i].is_blocked === true) { %>
                             <span class="badge rounded-pill alert-danger"
                             style="width: 60px;">Blocked</span>                                       
                        <%  } else { %>
                            <span class="badge rounded-pill alert-success"
                            style="width: 60px;">UnBlocked</span>
                          <%  } %>
                    </td>
                    <td>
                        <% if (data[i].is_blocked === false) { %>
                            <button class="btn btn-danger">
                                <a href="/admin/blockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none">Block</a>
                            </button>
                            <% } else { %>
                              <button class="btn btn-success" style="width: 80px;">
                                 <a href="/admin/unblockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none">Unblock</a>
                              </button>
                       <% } %>      
                    </td>
                </tr>

            <% } %>
        </tbody>
    </table>
</div>


<%- include("../partials/adminFooter") %>