        async function verifyPayment(payment, order) {
            const response = await fetch('/verify-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ payment, order }),
            })

            const result = await response.json();

            if (result.status === 'paymentSuccess') {
                Swal.fire({
                    icon: 'success',
                    title: 'Payment Successfull',
                    showConfirmButton: false,
                    timer: 1500
                })
                setTimeout(() => {
                    location.href = `/confirmation/?orderId=${result.placedOrderId}`
                }, 1500);
            } else if (result.status === 'paymentFailed') {
                Swal.fire({
                    icon: 'error',
                    title: 'Payment Failed',
                    showConfirmButton: false,
                    timer: 1500
                })
                setTimeout(() => {
                    location.href = `/order-failed/?orderId=${result.placedOrderId}`
                }, 1500);
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Some thing went wrong',
                    showConfirmButton: false,
                    timer: 1500
                })
            }
        }

