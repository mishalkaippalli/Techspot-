<style>
    .home-slider {
        overflow: hidden; /* Hide any content that overflows the container */
    }

    .swiper-container {
        max-width: 100%; /* Limit the maximum width to 100% of the parent container */
        overflow: hidden; /* Hide any content that overflows the container */
    }

    .swiper-wrapper {
        display: flex; /* Ensure the wrapper items are displayed in a row */
    }

    .swiper-slide {
        width: 100%; /* Make each slide take up the full width of the container */
        box-sizing: border-box; /* Include padding and border in the element's total width and height */
    }
    /* Add this CSS code to set fixed dimensions for product boxes */
    .product-cart-wrap {
        width: 100%; /* Adjust the width as needed */
        height: 450px; /* Adjust the height as needed */
        border: 1px solid #ccc; /* Optional: Add border for better visualization */
        padding: 10px; /* Optional: Add padding for spacing */
    }

    .product-img-action-wrap {
        /* Ensure the image and action area fit within the fixed box size */
        height: calc(100% - 60px); /* Subtract the height of other elements (e.g., product content) from the total height */
        position: relative;
    }

    .product-img {
        /* Adjust image size to fit within the product box */
        max-width: 100%; /* Ensure image fits within the container */
        max-height: 100%; /* Ensure image fits within the container */
        display: block; /* Make sure the image doesn't break the layout */
        margin: 0 auto; /* Center the image horizontally */
    }

    
    .product-content-wrap h2 {
        /* Ensure product name fits within the fixed box size */
        margin: 0; /* Remove default margin */
        overflow: hidden; /* Hide any content that overflows the container */
        text-overflow: ellipsis; /* Add ellipsis (...) for long product names */
        white-space: nowrap; /* Prevent text from wrapping */
    }
    .product-price {
        position: relative;
        /* Ensure tooltip text doesn't overflow */
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

