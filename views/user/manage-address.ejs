      /* Style for the radio button and label */
      .radion_btn {
         display: flex;
         align-items: center;
         margin-bottom: 10px;
      }

      .radion_btn input[type="radio"] {
         margin-right: 10px;
      }

      /* Style for the card text */
      .card-text {
         font-size: 14px;
         color: #ffffff;
      }

      /* Optional: Style for the card header (if needed) */
      .card-header {
         background-color: #f8f9fa;
         font-weight: bold;
         padding: 10px;
         border-bottom: 1px solid #e5e5e5;
      }

      .addAddress_form p {
         color: red;
      }

      /* Style the radio button */
      .radio_btn {
         appearance: none;
         /* Remove the default radio button appearance */
         width: 15px;
         /* Adjust the width of the radio button */
         height: 15px;
         /* Adjust the height of the radio button */
         border: 1px solid #09b01a;
         /* Border color */
         border-radius: 10%;
         /* Make it round */
         outline: none;
         /* Remove the outline when focused */
         cursor: pointer;
         /* Add a pointer cursor */
         vertical-align: middle;
         /* Center it vertically with the label */
         margin-right: 10px;
         /* Add some spacing between the radio button and label */
      }

      /* Style the radio button when checked */
      .radio_btn:checked {
         background-color: #09b01a;
         /* Background color when checked */
      }

      /* Style the radio button label */
      label {
         font-size: 14px;
         /* Label text size */
         color: #000000;
         /* Label text color */
         margin-bottom: 10px;
      }
   </style>
