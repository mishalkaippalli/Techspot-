   <script>
      //---------------------------Add Address----------------------
      document.getElementById('addAddressForm').addEventListener('submit', async (event) => {
         event.preventDefault()

         const isValid = addressValidate();

         if (isValid) {

            const formData = {
               name: event.currentTarget.name.value,
               mobile: event.currentTarget.mobileNumber.value,
               homeAddress: event.currentTarget.address.value,
               city: event.currentTarget.city.value,
               state: event.currentTarget.state.value,
               postalCode: event.currentTarget.pcode.value
            }

            const response = await fetch('/add-address', {
               method: 'post',
               headers: {
                  'Content-Type': 'application/json'
               },
               body: JSON.stringify(formData)
            })

            const result = await response.json();

            if (result.status === 'success') {
               Swal.fire({
                  icon: 'success',
                  title: 'Address Added',
                  showConfirmButton: false,
                  timer: 1500
               })
               setTimeout(() => {
                  location.href = '/manage-address'
               }, 2000);
            } else {
               Swal.fire({
                  icon: 'error',
                  title: 'Something went wrong',
                  showConfirmButton: false,
                  timer: 1500
               })
            }
         }
      })


      //---------------------------Delete Address----------------------

      const deleteButton = document.querySelectorAll('.addressDeleteBtn');
      deleteButton.forEach(button => {
         button.addEventListener('click', async (event) => {
            event.preventDefault();
            const addressId = event.currentTarget.getAttribute('data-addressId');
            console.log(addressId)
            const response = await Swal.fire({
               title: "Remove",
               text: "Are you to Remove Address",
               icon: "question",
               showCancelButton: true,
               confirmButtonColor: '#3085d6',
               cancelButtonColor: '#990f0f',
               confirmButtonText: 'Yes',
               cancelButtonText: 'No !'
            });

            if (response.isConfirmed) {
               const response = await fetch(`/delete-address/?addressId=${addressId}`);
               const result = await response.json();

               if (result.status === 'success') {
                  Swal.fire({
                     icon: 'success',
                     title: result.message,
                     showConfirmButton: false,
                     timer: 1500
                  })
                  setTimeout(() => {
                     location.href = '/manage-address'
                  }, 2000);
               } else {
                  Swal.fire({
                     icon: 'error',
                     title: result.message,
                     showConfirmButton: false,
                     timer: 1500
                  })
               }
            }
         })
      })



   </script>


