    <section>
        <div class="container">
            <h1 class="text-center">ORDERS</h1>
        </div>
    </section>
    <!-- End Banner Area -->

    <!--================Cart Area =================-->
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card mb-4 custom-card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="listOrders">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th>OrderId</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Total Amount</th>
                                    <th>Info</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <% if (userOrders.length > 0) { %>
                                    <% for (let i = 0; i < userOrders.length; i++) { %>
                                        <tr>
                                            <td>
                                                <% for (let j = 0; j < userOrders[i].products.length; j++) { %>
                                                    <%- userOrders[i].products[j].productId.productName %>
                                                        <br>
                                                <% } %>
                                            </td>
                                            <td><%- userOrders[i].date.toLocaleString('en-US', {
                                                    month: 'short',
                                                    weekday: 'short',
                                                    day: '2-digit',
                                                    hour: 'numeric',
                                                    minute: '2-digit',
                                                    hour12: true
                                                }) %>
                                            </td>
                                            <td><%- userOrders[i].orderStatus %></td>
                                            <td><%- userOrders[i].actualTotalAmount %></td>
                                            <td><a href="/order-details/?orderId=<%- userOrders[i]._id %>"
                                                    class="btn btn-primary" type="button">Details</a></td>
                                        </tr>
                                    <% } %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <a href="/user-profile" class="btn btn-secondary">Go Back</a>
            </div>
        </div>
    </div>

