    <script>
        document.getElementById('placeOrder').addEventListener('click', async (event) => {
            event.preventDefault();
            // Taking address id 
            const radioButtons = document.getElementsByName('address-option');
            let selectedRadioButtonId = null;
            for (const radioButton of radioButtons) {
                if (radioButton.checked) {
                    selectedRadioButtonId = radioButton.id;
                    break;
                }
            }
            const total = Number('<%- grandTotal %> ')
            const actualAmount = parseFloat(document.getElementById('cartTotal').innerHTML.replace(/[^\d.]/g, ''))
            const walletAmount = Number("<%- userWallet.walletAmount %>")
            const paymentMethod = document.querySelector('input[name="payment-method"]:checked').id;
            // console.log(payment)
            // console.log(total)

            if (!selectedRadioButtonId) {
                Swal.fire({
                    icon: 'error',
                    title: 'Address Needed',
                })
            } else if (total === 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'No Items'
                })
            } else if (paymentMethod === 'WALLET' && walletAmount < actualAmount) {
                Swal.fire({
                    icon: 'error',
                    title: 'Insufficient Balance in wallet'
                })
            } else {

                const couponDiscount = parseFloat(document.getElementById('discount').innerHTML.replace(/[^\d.]/g, ''));
                const couponId = document.getElementById('couponId').value;

                const data = {
                    totalAmount: total,
                    paymentMethod: paymentMethod,
                    couponDiscount: couponDiscount,
                    actualAmount: actualAmount,
                    addressId: selectedRadioButtonId,
                    couponId: couponId
                }

                const response = await fetch('/place-order', {
                    method: 'post',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })

                const result = await response.json()

                if (result.status === 'COD') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Order Placed',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    setTimeout(() => {
                        location.href = `/confirmation/?orderId=${result.placedOrderId}`
                    }, 1500);

                } else if (result.status === 'WALLET') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Order Placed',
                        showConfirmButton: false,
                        timer: 1500
                    })
                    setTimeout(() => {
                        location.href = `/confirmation/?orderId=${result.placedOrderId}`
                    }, 1500);
                }
                // ===RAZORPAY===
                else if (result.status === 'RAZORPAY') {

                    razorpayPayment(result.response);

                } else if (result.status === 'sessionError') {
                    Swal.fire({
                        icon: 'info',
                        title: result.message,
                        showConfirmButton: false,
                        timer: 1000
                    })
                    setTimeout(() => {
                        location.href = '/login'
                    }, 1500);
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: result.message,
                        showConfirmButton: false,
                        timer: 1500
                    })
                }
            }
        })

        function razorpayPayment(order) {

            var options = {
