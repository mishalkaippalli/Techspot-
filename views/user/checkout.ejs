    <!-- Applying Coupon -->
    <script>
        document.getElementById('applyCouponBtn').addEventListener('click', async (event) => {
            event.preventDefault();

            const isValid = validateCouponFeild();

            if (isValid) {
                const couponCode = document.getElementById('couponCode').value;
                const totalAmount = '<%- grandTotal %>'
                console.log(totalAmount)
                // console.log(couponCode);

                const response = await fetch(`/apply-coupon/?couponCode=${couponCode}&totalAmount=${totalAmount}`);
                const result = await response.json();

                if (result.status === 'success') {
                    Swal.fire({
                        title: 'Coupon Applied',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
                    document.getElementById('removeCouponBtn').style.display = 'inline-block';
                    document.getElementById('discount').innerHTML = '&#x20B9;' + result.discountValue
                    document.getElementById('cartTotal').innerHTML = '&#x20B9;' + result.actualValue
                    document.getElementById('couponId').value = result.couponId;
                } else {
                    Swal.fire({
                        title: 'Coupon Already Used',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            }


        })

        document.getElementById('removeCouponBtn').addEventListener('click', async () => {
         const couponId = document.getElementById('couponId').value;
         const originalTotalAmount = '<%- grandTotal %>'

        try {
            const response = await fetch(`/removecoupon?couponId=${couponId}&originalTotalAmount=${originalTotalAmount}`);
            const data = await response.json();
            
            if (data.status === 'success') {
                document.getElementById('couponId').value = '';
                document.getElementById('applyCouponBtn').style.display = 'inline-block';
                document.getElementById('removeCouponBtn').style.display = 'none';
                document.getElementById('couponCode').value = '';
                document.getElementById('couponCodeError').textContent = '';
                

                document.getElementById('discount').innerHTML = '&#x20B9;' + 0
                    document.getElementById('cartTotal').innerHTML = '&#x20B9;' + data.originalTotalAmount
            } else {
                document.getElementById('couponCodeError').textContent = data.message;
            }
        } catch (error) {
            console.error('Error removing coupon:', error);
        }
    });

        function validateCouponFeild() {
            let isValid = true;
            const couponFeild = document.getElementById('couponCode').value;
            if (couponFeild.trim() === '') {
                document.getElementById('couponCodeError').textContent = 'Please Apply Coupon Code'
                document.getElementById('couponCode').style.borderColor = 'red'
